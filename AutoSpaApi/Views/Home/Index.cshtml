@{
    ViewData["Title"] = "La mejor app para tu auto";
}
<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/lib/img/compras2.jpg"  class="d-block w-100" alt="..." style="opacity: 0.5;" >
            <div class="carousel-caption d-none d-md-block">
                <h3 style="color:darkblue; opacity: 0.6;">COMPRÁ</h3>
                <p style="color:darkblue;"> Realizá la compra de tus productos de forma segura y rapída en nuestra app </p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/lib/img/SeguimientosPedido.jpg" class="d-block w-100" alt="..." style="opacity: 0.5;" >
            <div class="carousel-caption d-none d-md-block">
                <h3  style="color:darkblue; opacity: 0.6;">SEGUIMIENTOS</h3>
                <p style="color:darkblue;">Podes seguir todos tu envios con nuestro sistema de seguimiento</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/lib/img/solicitar_turno.jpg" class="d-block w-100" alt="..." style="opacity: 0.5;">
            <div class="carousel-caption d-none d-md-block">
                <h3  style="color:darkblue; opacity: 0.6;">RESERVÁ TURNOS</h3>
                <p style="color:darkblue;">Reservá turnos en nuestros exclusivos talleres con garantía de satisfacción</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Anterior</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Siguiente</span>
    </a>
</div>